@model dynamic

@foreach (var item in Model.groupList)
                {
                    <div class="col-sm-6 col-md-3">
                        <div class="thumbnail">
                            <input id="groupId_@(item.groupId)" type="text" class="hideElement" value="@item.groupId"/>

                            @if (item.isActive)
                            {
                                <div class="group-header" style="background-image: url(/content/site/support.png)"><h4>@item.groupName</h4></div>
                            }
                            else
                            {
                                <div class="group-header" style="background-image: url(/content/site/inactive-group.png)"><h4>@item.groupName</h4></div>
                            }
                            <div class="caption">
                                
                                <p style="height:45px;overflow:hidden;">@item.description</p>

                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6 text-center">
                                        <h5>Products :@item.productCount</h5>
                                        <a href="#" class="btn btn-default grey editGroup" role="button" id="editGroup_@(item.groupId)"  groupId="@item.groupId" data-member="@Url.Action("EditGroupPartial",new {groupId=@item.groupId})">
                                            <img src="~/Content/site/setting.png" alt="" />
                                            Edit Group
                                        </a>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6 text-center">
                                        <h5>Users :@item.memberCount</h5>
                                        <a href="#" class="btn btn-default grey" role="button">
                                            <img src="~/Content/site/setting.png" alt="" />
                                            Edit User
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
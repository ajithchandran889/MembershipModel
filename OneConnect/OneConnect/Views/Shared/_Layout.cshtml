<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title-one Konnect</title>
    <!-- Bootstrap -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/sticky-footer.css" rel="stylesheet">
    <link href="~/Content/css/navbar.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link href="~/Content/css/jquery-ui.css" rel="stylesheet">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script type="text/javascript">
        var RecaptchaOptions = {
            theme: 'white'
        };
 </script>
</head>
<body>
    <div id="sl-loadingscreen"></div>
    <header>
        <nav role="navigation" class="navbar navbar-default">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button data-target=".navbar-ex1-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand"><img src="~/Content/site/logo.png"></a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <div class="hidden">
                        @{Html.RenderAction("IsAuthenticated", "Home");}
                    </div>
                    
                    @if(Convert.ToBoolean(Session["IsAuthenticated"]))
                       {
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="/">Home</a>
                                </li>
                                @*<li>
                                    @Html.ActionLink("Membership","Index","Credit")
                                </li>*@
                            </ul>
                       }
                    
                    <!-- /.nav -->
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <div class="col-sm-6 col-md-7 col-lg-7">
                <p class="text-muted footer-text">OneKonnect Communication simplified and unfied &#64;2015. All Rights Reserved</p>
            </div>
            <div class="col-sm-6 col-md-5 col-lg-5 pull-right">
                <ul class="footer-nav">
                    <li><a href="#">Home</a></li>
                    <li><a href="product.html">About Us</a></li>
                    <li><a href="contact-us.html">Products</a></li>
                    <li><a href="sign-in.html">Contact</a></li>
                </ul>
            </div>
        </div>
    </footer>
    @Html.Hidden("RedirectToHome", Url.Action("Index", "Home"));
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui.js" type="text/javascript"></script>
    <script src="~/Scripts/script.js" type="text/javascript"></script>
    <script src="~/Scripts/product.js" type="text/javascript"></script>
    
</body>
</html>

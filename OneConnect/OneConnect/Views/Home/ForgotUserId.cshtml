@{
    ViewBag.Title = "ForgotUserId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="home-welcome-page">
    <div class="container">
        <div class="row home-welcome-text">
            <h3>One Konnect</h3>
            <h1>Communication Simplified And Unfied</h1>
        </div>
        <div class="row forgot-password">
            <div class="col-md-7  col-lg-6 col-md-offset-3 col-sm-8 col-sm-offset-3">
                <div class="panel panel-info">
                    <div class="panel-headings">
                        <div class="row">
                            <div class="col-md-4">
                                <h3 class="panel-title">Forgot UserID</h3>
                            </div>
                            <div class="col-md-8">
                                <div id="successMessage" class="hideElement">
                                    <div class="alert alert-success" role="alert">
                                        <span><img src="~/Content/site/like.png" alt="" />	</span>
                                        Check your inbox for userID
                                    </div>
                                </div>
                                <div id="errorMessage" class="hideElement">
                                    <div class="alert alert-danger" role="alert">
                                       <span id="failureMessage"></span>
                                    </div>
                                </div>
                           </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row login-body">
                            <div class="col-md-10 col-md-offset-1 username-pass" id="username-pass">
                                <form id="forgotUserIdForm" accept-charset="UTF-8" role="form">
                                    <fieldset>

                                        <div class="form-group user-input">
                                            <img src="~/Content/site/forgot-pasword-email.png" />
                                            <input class="form-control" placeholder="Email" name="email" type="text" value="" id="emailId">
                                            
                                        </div>
                                        <div class="g-recaptcha form-group" data-sitekey="6LeUTAoTAAAAAOvGucHt_lc8T63gI2V3xzccwJkr" ></div>
                                       @* <div class="captcha-box">
                                            <img src="~/Content/site/captcha.png" />
                                        </div>
                                        <div class="form-group user-input">
                                            <input class="form-control" placeholder="Code" name="Code" type="text" value="">
                                            <img src="~/Content/site/captcha-code-bug.png" />
                                        </div>*@
                                        <div class="login-btn-box col-md-5">
                                            <input id="forgotUserId" class="btn btn-flat flat-info btn-lg btn-block login-btn" type="submit" value="Submit">
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                            <div class="col-md-10 col-md-offset-1  username-pass-redirect hideElement " id="username-pass-redirect">
                                <div class="col-md-12 padding-Fix" style="margin: auto;">
                                    <div class="col-md-12 alert alert-success padding-Fix" role="alert" >
                                        <div class="col-md-1">
                                            <img src="~/Content/site/like.png" alt="" /></div>
                                        <div class="col-md-11">
                                            <span>User ID forgot request successfull,Check your inbox for User ID</span>

                                        </div>

                                    </div>
                                    <input id="goToLoginPage" class="btn btn-flat flat-info btn-lg btn-block login-btn goToLoginPage" type="button" value="Go To Login">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
@Html.Hidden("RedirectToLogin", Url.Action("Index", "Home"));
 

@{
    ViewBag.Title = "RecoverPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="home-welcome-page">
    <div class="container">
        <div class="row home-welcome-text">
            <h3>One Konnect</h3>
            <h1>Communication Simplified And Unfied</h1>
        </div>
        <div class="row forgot-password">
            <div class="col-md-7  col-lg-6 col-md-offset-3 col-sm-8 col-sm-offset-3">
                <div class="panel panel-info">
                    <div class="panel-headings">
                        <div class="row">
                            <div class="col-md-4">
                                <h3 class="panel-title">Reset Password</h3>
                            </div>
                            <div class="col-md-8">
                                <div id="successMessage" class="hideElement">
                                    <div class="alert alert-success" role="alert">
                                        <span><img src="~/Content/site/like.png" alt="" />	</span>
                                        <span class="bold"> &nbsp;Thanks you!</span>	Done!
                                    </div>
                                </div>
                                <div id="errorMessage" class="hideElement">
                                    <div class="alert alert-success" role="alert">
                                        <span>Something went wrong!</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row login-body">
                            <div class="col-md-10  username-pass">
                                <form accept-charset="UTF-8" role="form">
                                    <input type="hidden" id="recoveryToken" value="@ViewBag.passwordToken"/>
                                    <fieldset>
                                        <div class="form-group user-input">
                                            <input class="form-control" placeholder="New Password" name="new" id="new" type="text" value="">
                                            <img src="~/Content/site/key.png" />
                                        </div>
                                        <div class="form-group user-input">
                                            <input class="form-control" placeholder="Confirm Password" name="confirm" id="confirm" type="password" value="">
                                            <img src="~/Content/site/key.png" />
                                        </div>
                                        <div class="login-btn-box col-md-5">
                                            <input id="recoverPassword" class="btn btn-flat flat-info btn-lg btn-block login-btn" type="submit" value="Submit">
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="top-well">
    <div class="well"></div>
</section>
<div class="container">
    <section class="login-status">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-7">
                @if (!String.IsNullOrEmpty(Model.accountInfo.name))
                {
                    <p>Logged In As @Model.accountInfo.name </p>
                }

            </div>
            <div class="col-md-6 col-sm-6 col-xs-5 pull-right">
                <div class="logout-btn">
                    <a href="#" id="logOutBtn" class="btn btn-danger">
                        <img src="~/Content/site/logout.png" alt="">
                        Logout
                    </a>
                </div>
            </div>
        </div>
        <div class="blue-line">
            <div class="blue-spacing"></div>
        </div>
    </section>


    <section class="dashboard">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 ">
                <h1>Select product</h1>
            </div>
        </div>
    </section>

    <section>



        <div class="row">


            <div class="col-md-12">
                <div class="table-responsive">


                    <table id="mytable" class="table table-bordred table-striped">

                        <thead>
                        <th>Product detail</th>
                        <th>Subscription Modal</th>
                        <th>Subscribe</th>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.products)
                        {
                            <tr>
                                <td>
                                    <div class="col-md-3">
                                        <div class="s_product">
                                            
                                            <img src="@item.productImageUrl">
                                        </div>
                                    </div>
                                    <div class="col-md-9 s_p_detail">
                                        <h2>@item.productName</h2>
                                        <p>@item.productDescription</p>
                                    </div>
                                </td>
                                <td>
                                    <select class="form-control" id="subscribeModel_@item.productId">
                                        <option value="0" selected>Select Subscription modal</option>
                                        <option value="1">Gold - Monthly:$@(Math.Round(item.goldMonthly, 2))</option>
                                        <option value="2">Gold - Yearly:$@(Math.Round(item.goldYearly, 2))</option>
                                        <option value="3">Slilver - Monthly:$@(Math.Round(item.silverMonthly, 2))</option>
                                        <option value="4">Slilver - Yearly:$@(Math.Round(item.silverYearly, 2))</option>
                                    </select>
                                </td>


                                <td>
                                    <input id="product_@item.productId" name="selectProducts" type="checkbox" class="css-checkbox" productid="@item.productId">
                                    <input type="hidden" id="silverMonthly_@item.productId" value="@item.silverMonthly" />
                                    <input type="hidden" id="silverYearly_@item.productId" value="@item.silverYearly" />
                                    <input type="hidden" id="silverValuePerUserMonthly_@item.productId" value="@item.silverPerUserMonthly"/>
                                    <input type="hidden" id="silverValuePerUserYearly_@item.productId" value="@item.silverPerUserYearly" />
                                    <input type="hidden" id="goldMonthly_@item.productId" value="@item.goldMonthly" />
                                    <input type="hidden" id="goldYearly_@item.productId" value="@item.goldYearly" />
                                    <input type="hidden" id="goldValuePerUserMonthly_@item.productId" value="@item.goldPerUserMonthly" />
                                    <input type="hidden" id="goldValuePerUserYearly_@item.productId" value="@item.goldPerUserYearly" />
                                    <input type="hidden" id="productName_@item.productId" value="@item.productName" />
                                </td>

                            </tr>
                        }
                        </tbody>

                    </table>

                    <div class="clearfix"></div>
                    <div>
                        <a id="selectUsers"  class="next pull-right">Select User <i class="glyphicon glyphicon-chevron-right"></i></a>
                    </div>

                </div>

            </div>

        </div>


        <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input class="form-control " type="text" placeholder="Mohsin">
                        </div>
                        <div class="form-group">

                            <input class="form-control " type="text" placeholder="Irshad">
                        </div>
                        <div class="form-group">
                            <textarea rows="2" class="form-control" placeholder="CB 106/107 Street # 11 Wah Cantt Islamabad Pakistan"></textarea>


                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>



        <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                    </div>
                    <div class="modal-body">

                        <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

                    </div>
                    <div class="modal-footer ">
                        <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </section>


</div>

